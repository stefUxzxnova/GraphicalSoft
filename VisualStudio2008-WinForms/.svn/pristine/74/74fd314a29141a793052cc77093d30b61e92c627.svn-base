                dashPen.DashPattern = dashValues;

                foreach (Shape item in Selection)
                {
                    //g = grfx.Save();
                    //item.TransformationMatrix.Multiply(grfx.Transform);
                    //grfx.Transform = item.TransformationMatrix;
                    item.RotateShape(grfx);
